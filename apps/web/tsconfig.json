{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["bun-types"],
    "paths": {
      "@steam.learn/api/*": ["../../packages/api/*"],
      "@steam.learn/db/*": ["../../packages/db/*"]
    },
  },
    "extends": "astro/tsconfigs/strict",
    "exclude": ["node_modules"]
}
