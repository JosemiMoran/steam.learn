{
    "compilerOptions": {
      "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
      "strictNullChecks": true,
      "noUncheckedIndexedAccess": true,
      "paths": {
        "@steam.learn/api/*": ["./packages/api/*"],
        "@steam.learn/db/*": ["./packages/db/*"],
      }
    },
  }
  