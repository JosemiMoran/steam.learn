{
  "name": "@steam.learn/root",
  "version": "0.0.1",
  "description": "steam.learn project",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "postinstall": "bun upgrade --canary",
    "build:api": "turbo run build --filter=@steam.learn/api",
    "build:web": "turbo run build --filter=@steam.learn/astro",
    "build": "turbo run build",
    "dev": "turbo dev --parallel --filter={@steam.learn/astro,@steam.learn/api}",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check": "turbo run check",
    "serve": "turbo run serve --parallel",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean"
  },
  "dependencies": {
    "@astrojs/check": "latest",
    "@astrojs/react": "latest",
    "@astrojs/node": "^7.0.4",
    "@astrojs/vercel": "latest",
    "@hono/trpc-server": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@xata.io/client": "latest",
    "estree-walker": "2.0.2",
    "sharp": "latest",
    "turbo": "latest",
    "typescript": "latest",
    "astro": "latest",
    "hono": "latest",
    "node": "18.18.0",
    "react": "latest",
    "react-dom": "latest",
    "vercel": "latest"
  },
  "devDependencies": {
    "bun":"latest",
    "bun-types": "latest"
  }
}
